<!-- res/layout/activity_rating.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/dishTextView"
            android:layout_width="130dp"
            android:layout_height="44dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="130dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="150dp"
            android:text="@string/dish_label" />

        <TextView
            android:id="@+id/restaurantTextView"
            android:layout_width="183dp"
            android:layout_height="45dp"
            android:layout_below="@id/dishTextView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="104dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="124dp"
            android:text="@string/restaurant_label" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restaurantTextView"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="53dp"
            android:layout_marginEnd="97dp" />

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="125dp"
            android:layout_height="51dp"
            android:layout_below="@id/ratingBar"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="160dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="126dp"
            android:text="@string/rating_label" />
    </RelativeLayout>
</LinearLayout>
